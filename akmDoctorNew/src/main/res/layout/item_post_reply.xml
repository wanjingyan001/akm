<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/huitie_image"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="@dimen/margin_top_8dp"
            android:src="@mipmap/ic_default_patient" />

        <TextView
            android:id="@+id/huitie_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="@dimen/margin_right_8dp"
            android:textColor="@color/app_main_color" />

        <TextView
            android:id="@+id/huitie_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/edit_content" />

        <TextView
            android:id="@+id/reply_for"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_right_16dp"
            android:text="回复"
            android:textColor="@color/edit_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/huitie_cotent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_8dp"
        android:layout_marginLeft="4dp"
        android:text="1111"
        android:textColor="@color/text_color_black"
        android:textSize="@dimen/font_size_16sp" />

</LinearLayout>