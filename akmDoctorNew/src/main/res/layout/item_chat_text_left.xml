<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/head_pic_chatID"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="top"
        android:background="@mipmap/ic_default_patient" />

    <TextView
        android:id="@+id/chat_contentID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="45dp"
        android:background="@drawable/chat_from_bg_normal" />

    <ImageView
        android:id="@+id/chat_picID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_from_bg_normal"
        android:src="@drawable/icon_picture"
        android:visibility="gone" />
    />

    <ImageView
        android:id="@+id/chat_voiceID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/chat_from_bg_normal"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />
</LinearLayout>