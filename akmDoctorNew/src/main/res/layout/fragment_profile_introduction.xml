<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:padding="4dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_profile_person_info"
            android:gravity="center_vertical"
            android:text="个人介绍" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/widgets_general_row_pressed" />
        <EditText
            android:id="@+id/self_introduction_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:textSize="12sp"
            android:background="@null"
            android:paddingTop="4dp"
            android:maxLength="300"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="您的从业经历、职称、所获荣誉等信息（300字以内）" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_weight="5"
        android:padding="4dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_good_area"
            android:gravity="center_vertical"
            android:text="擅长领域" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/widgets_general_row_pressed" />
        <EditText
            android:id="@+id/Areas_of_expertise_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:textSize="12sp"
            android:background="@null"
            android:paddingTop="4dp"
            android:maxLength="300"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="您的专业领域、擅长病种、研究方向等信息（300字以内）" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="*以上信息将展示给您的患者，请认真填写" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left_8dp"
        android:layout_marginRight="@dimen/margin_right_8dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="2">

        <Button
            android:id="@+id/privous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_right_8dp"
            android:layout_weight="1"
            android:background="@drawable/selector_general_button"
            android:text="上一步"
            android:textSize="@dimen/font_size_18sp"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_8dp"
            android:layout_weight="1"
            android:background="@drawable/selector_general_button"
            android:text="下一步"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_18sp"/>
    </LinearLayout>
</LinearLayout>