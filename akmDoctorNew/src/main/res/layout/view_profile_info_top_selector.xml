<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/profile_info_choose_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
    >
    <FrameLayout
        android:id="@+id/profile_info_framelayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <View android:layout_width="wrap_content"
              android:layout_height="2dp"
              android:layout_gravity="center"
              android:background="@color/widgets_general_row_line"/>
        <ImageView
            android:id="@+id/profile_info_paint"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/selector_profile_select_button"
            />
    </FrameLayout>
    <TextView
        android:id="@+id/profile_info_title"
        android:layout_below="@id/profile_info_framelayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="基本信息"
        />
</RelativeLayout>