<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   android:padding="8dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:weightSum="10">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/doctor_head_img"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_default_doctor"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="8dp"
        android:layout_weight="10"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:id="@+id/historical_doctor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="李云峰主任医师"
            android:textColor="@color/title_color"
            android:textSize="@dimen/font_title_18sp" />
        <TextView
            android:id="@+id/doctor_suggest_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="建议多喝水"
            android:textColor="@color/suggest_color"
            android:maxLines="1"
            android:textSize="@dimen/font_size_16sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/doctor_suggest_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015-11-12" />
        <TextView
            android:id="@+id/suggest_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未评价"
            android:textColor="@color/red"
            android:textSize="@dimen/font_size_16sp" />
    </LinearLayout>
</LinearLayout>