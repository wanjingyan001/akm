<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:gravity="center"
              android:padding="@dimen/padding_8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/Case_imgID"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_default_doctor"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_toRightOf="@id/Case_imgID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            >

            <TextView
                android:id="@+id/Case_TitleID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小名医生"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_16sp"/>

            <TextView
                android:id="@+id/Case_TimeID"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:35"
                android:textSize="@dimen/font_size_12sp"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/Case_LinearLayoutID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"
            >
            <TextView
                android:id="@+id/Case_ContentID"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="你有3个历史病例"
                android:singleLine="true"
                android:textSize="@dimen/font_size_14sp"/>
            <cn.wei.library.widget.BadgeView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/badge_60_bkg"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
