<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/padding_bottom_8dp"
    android:paddingLeft="@dimen/padding_left_16dp"
    android:paddingRight="@dimen/padding_right_16dp"
    android:paddingTop="@dimen/padding_top_8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/interrogation_head_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_healthy_dateil_head" />

    <TextView
        android:id="@+id/interview_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:textSize="@dimen/font_size_16sp" />

    <TextView
        android:id="@+id/interview_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_weight="1"
        android:text="( 男 45岁 )"
        android:textSize="@dimen/font_size_14sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_right_8dp"
        android:src="@drawable/action_row" />
</LinearLayout>
