<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_color"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/padding_16dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/share_with_sina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_sina"
            android:text="新浪微博" />

        <TextView
            android:id="@+id/share_with_weixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="64dp"
            android:drawableTop="@drawable/ic_weixin"
            android:text="微信" />

        <TextView
            android:id="@+id/share_with_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="64dp"
            android:drawableTop="@drawable/ic_qq"
            android:text="腾讯QQ" />
    </LinearLayout>

    <Button
        android:id="@+id/share_akm_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_share_cancle"
        android:layout_marginTop="@dimen/margin_top_16dp"
        android:text="@string/cancel" />


</LinearLayout>