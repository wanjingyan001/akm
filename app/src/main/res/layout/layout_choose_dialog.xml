<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
                  xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:weightSum="2"
                  android:background="@drawable/choose_dialog_round_white_bg"
        >
    <TextView
        android:id="@+id/mDialogMessageLabel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="你还没登录请登录"
        android:textColor="@color/text_or_button_bg"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_weight="1"
        android:textSize="18sp" />
    <View
       android:layout_width="match_parent"
       android:layout_height="0.5dp"
       android:background="@color/widgets_general_row_line"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="2">
        <Button
            android:id="@+id/mDialogCancelBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_dialog_button"
            android:text="取消"
            android:layout_margin="5dp"
            android:textSize="15sp" />
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/widgets_general_row_line"
            />
        <Button
            android:id="@+id/mDialogConfirmBtn"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="@drawable/selector_dialog_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="确定"
            android:textSize="15sp" />
    </LinearLayout>
    </LinearLayout>